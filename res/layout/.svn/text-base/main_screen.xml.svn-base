<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnNewSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/btnNewSpeech" />

    <Button
        android:id="@+id/btnEditSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNewSpeech"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/btnEditSpeech" />

    <Button
        android:id="@+id/btnPlaySpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEditSpeech"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/btnPlaySpeech" />

</RelativeLayout>